{
    "presets": ["module:metro-react-native-babel-preset"],
    "env": {
        "production": {
            "plugins": ["react-native-paper/babel"]
        }
    },
    "plugins": [
        [
            "module-resolver",
            {
                "extensions": [".js", ".jsx", ".json"],
                "root": ["."],
                "alias": {
                    "src": "./src",
                    "assets": "./assets",
                    "appConstants": "./appConstants"
                }
            }
        ],
        [
            "module:react-native-dotenv",
            {
                "envName": "APP_ENV",
                "moduleName": "@env",
                "path": ".env",
                "blocklist": null,
                "allowlist": null,
                "safe": false,
                "allowUndefined": true,
                "verbose": false
            }
        ],
        "react-native-reanimated/plugin"
    ]
}
